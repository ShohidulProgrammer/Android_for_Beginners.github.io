<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/regformTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION FORM"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/nameTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="20sp"
        android:layout_below="@+id/regformTextId"
        />
    <EditText
        android:id="@+id/nameEditTextId"
        android:layout_toRightOf="@+id/nameTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/collegeTextId"
        android:layout_below="@+id/nameTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="College : "
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/collegeEditTextId"
        android:layout_below="@+id/nameEditTextId"
        android:layout_toRightOf="@+id/collegeTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submitBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/collegeTextId" />
    <Button
        android:id="@+id/cancelBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/collegeEditTextId"
        android:layout_toRightOf="@+id/submitBtnId" />
</RelativeLayout>
