<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c9c1828"
    android:padding="20dp"
    android:textSize="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/genderRadioGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/maleBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male_txt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"

            />

        <RadioButton
            android:id="@+id/femaleBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female_txt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"

            />

    </RadioGroup>

    <Button
        android:id="@+id/showBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_btn_txt"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/genderTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"


        />

</LinearLayout>